<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>

        <a href="/vibes/add" class="btn">Criar vibe</a>
    </div>

    <h3>Suas vibes</h3>

    <ul>
        {{#each vibes}}
            <li>
                <span class="label">{{this.title}}</span>
                <span class="actions">
                    <a href="/" class="btn">Editar</a>

                    <form action="/vibes/remove" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>

    {{#if emptyVibes}}
        <p>Ainda não há nenhuma vibe. <a href="/vibes/add">Crie agora!</a></p>
    {{/if}}
</div>